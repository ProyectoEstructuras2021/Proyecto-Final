	gotoxy(ctext,n+2);
	cout << "TAREAS EN ESPERA" <<endl;
	
	int longitud2 = strlen("TAREAS EN PROCESAMIENTO");
	int ctext2=100-(longitud2/2);
	gotoxy(ctext2,n+2);
	cout << "TAREAS EN PROCESAMIENTO" <<endl;
	
